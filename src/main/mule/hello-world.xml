<mule xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core" xmlns:custom-metrics="http://www.mulesoft.org/schema/mule/custom-metrics"
	xmlns:http="http://www.mulesoft.org/schema/mule/http"
